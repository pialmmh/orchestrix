# WireGuard Client Configuration Example
# Generated by: NetlabDeployment automation
# Client: Link3 Office / BDCOM / Developer Workstation
# Purpose: Remote access to netlab overlay and container networks

[Interface]
# Client private key (auto-generated)
PrivateKey = GENERATED_CLIENT_PRIVATE_KEY

# Client VPN address (assigned from 10.9.9.100+ range)
Address = 10.9.9.100/32

# Optional: DNS settings for internal resolution
# DNS = 10.10.199.10

# Optional: Client-side firewall rules
# PostUp = iptables -A FORWARD -i %i -j ACCEPT
# PostDown = iptables -D FORWARD -i %i -j ACCEPT

[Peer]
# VPN Server (netlab gateway - typically node1)
PublicKey = NETLAB_GATEWAY_PUBLIC_KEY
Endpoint = 10.20.0.30:51820

# Routes pushed to client:
# - 10.9.9.0/24: WireGuard overlay network (BGP mesh)
# - 10.10.0.0/16: Container supernet (all apps/databases)
AllowedIPs = 10.9.9.0/24, 10.10.0.0/16

# Keepalive for NAT traversal (recommended for remote clients)
PersistentKeepalive = 25

# ============================================================
# Usage Instructions
# ============================================================
#
# Linux/Mac:
#   sudo cp client1.conf /etc/wireguard/netlab.conf
#   sudo wg-quick up netlab
#
# Windows:
#   Import this file in WireGuard GUI
#   Activate connection
#
# Verify connectivity:
#   ping 10.9.9.1        # Gateway overlay IP
#   ping 10.10.199.10    # Container in netlab01
#
# ============================================================
