# Orchestrix Observability Stack Environment Variables

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=orchestrix123
GRAFANA_PORT=3000

# Loki Configuration
LOKI_PORT=3100
LOKI_RETENTION_PERIOD=168h

# Prometheus Configuration
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION_TIME=15d

# Tempo Configuration
TEMPO_PORT=3200
TEMPO_OTLP_GRPC_PORT=4317
TEMPO_OTLP_HTTP_PORT=4318
TEMPO_JAEGER_PORT=14268

# Node Exporter Configuration
NODE_EXPORTER_PORT=9100

# Stack Configuration
COMPOSE_PROJECT_NAME=orchestrix-observability
DOCKER_NETWORK=orchestrix-monitoring

# Log Levels
LOKI_LOG_LEVEL=info
PROMETHEUS_LOG_LEVEL=info
GRAFANA_LOG_LEVEL=info

# Resource Limits (Optional - uncomment to enforce)
# LOKI_MEMORY_LIMIT=2g
# PROMETHEUS_MEMORY_LIMIT=2g
# GRAFANA_MEMORY_LIMIT=1g
# TEMPO_MEMORY_LIMIT=2g