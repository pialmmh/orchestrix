# ===============================================
# ORCHESTRIX FRONTEND - DEVELOPMENT CONFIGURATION
# ===============================================

# API Configuration
REACT_APP_API_URL=http://localhost:8090/api
REACT_APP_WS_URL=ws://localhost:8090/ws
REACT_APP_API_TIMEOUT=30000

# Application Information
REACT_APP_VERSION=1.0.0
REACT_APP_NAME=Orchestrix Dev
REACT_APP_ENVIRONMENT=development
REACT_APP_BUILD_NUMBER=${BUILD_NUMBER:dev-build}

# Development Server Configuration
PORT=3010
HTTPS=false
BROWSER=none
FAST_REFRESH=true

# Feature Flags (Development)
REACT_APP_ENABLE_DEBUG=true
REACT_APP_ENABLE_MOCK_DATA=false
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_ERROR_REPORTING=false

# Performance & Debugging
GENERATE_SOURCEMAP=true
INLINE_RUNTIME_CHUNK=false
REACT_APP_LOG_LEVEL=debug
REACT_APP_ENABLE_REDUX_DEVTOOLS=true

# Security (Development - Less restrictive)
REACT_APP_SESSION_TIMEOUT=3600000
REACT_APP_IDLE_TIMEOUT=1800000
REACT_APP_MAX_LOGIN_ATTEMPTS=10

# UI Configuration
REACT_APP_DEFAULT_THEME=light
REACT_APP_ENABLE_THEME_SWITCHER=true
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_PAGINATION_SIZE=25

# Development URLs
REACT_APP_DOCS_URL=http://localhost:3001/docs
REACT_APP_SUPPORT_URL=mailto:dev-support@orchestrix.com