{
  "name": "orchestrix-debug-store",
  "version": "1.0.0",
  "description": "Debug store server for Orchestrix event-driven architecture",
  "main": "server.js",
  "scripts": {
    "start": "tsx server-with-mutations.js",
    "start:xstate": "tsx serverWithXState.js",
    "start:simple": "tsx server-simple.ts",
    "dev": "node dev-server.js",
    "dev:xstate": "node dev-server.js --xstate",
    "dev:simple": "node dev-server-simple.js",
    "dev:nodemon": "nodemon server.js",
    "dev:nodemon:xstate": "nodemon serverWithXState.js",
    "sync": "node ../scripts/sync-store.js",
    "sync:watch": "node ../scripts/sync-store.js --watch",
    "test": "tsx test-runner.ts",
    "test:stores": "tsx test-runner.ts",
    "snapshots": "ls -la store-snapshots/"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "chalk": "^5.6.2",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "mobx": "^6.13.7",
    "uuid": "^13.0.0",
    "ws": "^8.14.2",
    "xstate": "^5.22.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/ws": "^8.18.1",
    "chokidar": "^4.0.3",
    "nodemon": "^3.0.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
