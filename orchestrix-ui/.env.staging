# ===============================================
# ORCHESTRIX FRONTEND - STAGING CONFIGURATION
# ===============================================

# API Configuration
REACT_APP_API_URL=https://staging-api.orchestrix.com/api
REACT_APP_WS_URL=wss://staging-api.orchestrix.com/ws
REACT_APP_API_TIMEOUT=15000

# Application Information
REACT_APP_VERSION=1.0.0
REACT_APP_NAME=Orchestrix Staging
REACT_APP_ENVIRONMENT=staging
REACT_APP_BUILD_NUMBER=${BUILD_NUMBER:staging-build}

# Development Server Configuration (for local staging testing)
PORT=3010
HTTPS=true
BROWSER=none
FAST_REFRESH=false

# Feature Flags (Staging)
REACT_APP_ENABLE_DEBUG=false
REACT_APP_ENABLE_MOCK_DATA=false
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_ERROR_REPORTING=true

# Performance & Debugging
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=true
REACT_APP_LOG_LEVEL=warn
REACT_APP_ENABLE_REDUX_DEVTOOLS=false

# Security (Staging - Moderate restrictions)
REACT_APP_SESSION_TIMEOUT=1800000
REACT_APP_IDLE_TIMEOUT=900000
REACT_APP_MAX_LOGIN_ATTEMPTS=5

# UI Configuration
REACT_APP_DEFAULT_THEME=light
REACT_APP_ENABLE_THEME_SWITCHER=true
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_PAGINATION_SIZE=20

# External Services
REACT_APP_ANALYTICS_ID=UA-STAGING-ORCHESTRIX
REACT_APP_ERROR_REPORTING_DSN=https://staging-errors.orchestrix.com/dsn

# Staging URLs
REACT_APP_DOCS_URL=https://docs-staging.orchestrix.com
REACT_APP_SUPPORT_URL=https://support-staging.orchestrix.com